{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/tests/debug/debug.c",
                // "${workspaceFolder}/main.c",
                "${workspaceFolder}/tests/s21_tests.c",
                "${workspaceFolder}/tests/test_modules/*.c",
                "${workspaceFolder}/modules/*.c",
                "-o",
                "${workspaceFolder}/test",
                "-lm",
                "-lcheck",
                "-lsubunit"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
